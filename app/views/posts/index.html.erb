<h1 class="title">This is my posts#index</h1>
<section class="section">
    <div class="container">
        <% @posts.each do |post| %>
        <%= link_to post_path(post) do %>
        <div class="card">
            <div class="card-content">
                <div class="media">
                    <div class="media-content">

                        <div class="title is-4">
                            <%= post.title %>
                        </div>
                        <div class="content">
                            <%= post.content %>
                        </div>
                        <!--                     <div class="comment-count">
                      <div class="tag is-rounded"><%# comment count %></div>
                    </div> -->
                    </div>
                </div>
            </div>
        </div>
        <% end %>
        <% end %>
    </div>
</section>


